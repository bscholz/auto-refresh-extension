{
  "manifest_version": 3,
  "name": "Auto Page Refresher",
  "version": "1.0",
  "description": "Automatically refresh the current tab every few seconds.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "refresh-16.png",
      "48": "refresh-48.png",
      "128": "refresh-128.png"
    }
  },
  "background": {
    "service_worker": "worker.js"
  }
}
